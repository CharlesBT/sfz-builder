    "format": "prettier --write .",
    "doc:serve": "serve -p 3030 ./docs",
    "doc:build": "typedoc",
    "doc:watch": "typedoc --watch",
    "clean": "rimraf ./dist ./build ./docs ./.cache ./.temp ./logs ./test/coverage",
    "postinstall": "pnpm build && pnpm doc:build"
  },
