{
  "name": "@bms/ui",
  "version": "0.1.0",
  "description": "BMS UI",
  "repository": {
    "type": "git",
    "url": "https://github.com/CharlesBT/bms.git"
  },
  "keywords": [],
  "author": {
    "name": "Charles Br√©bant",
    "email": "charles.brebant@gmail.com",
    "url": "https://github.com/CharlesBT"
  },
  "license": "MIT",
  "private": true,
  "type": "module",
  "module": "dist/esm/index.mjs",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/esm/index.d.mts",
        "default": "./dist/esm/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    }
  },
  "types": "dist/cjs/index.d.cts",
  "main": "dist/cjs/index.cjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm clean && tsc --declaration",
    "dev": "pnpm clean && tsc --declaration --watch",
    "dev:watch": "tsc -p . --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run",
    "lint": "eslint --fix .",
    "format": "prettier --write .",
    "clean": "rimraf ./dist ./build ./.cache ./.temp ./logs ./test/coverage"
  },
  "devDependencies": {
    "@bms/eslint-config-custom": "*",
    "@bms/prettier-config-custom": "*",
    "@types/debug": "^4.1.7",
    "@types/lodash": "^4.14.189",
    "@types/node": "^18.11.9",
    "@vitest/coverage-c8": "^0.24.5",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "vitest": "^0.24.5"
  }
}
