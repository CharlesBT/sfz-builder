{
  "name": "@bms/wavefile",
  "version": "11.0.0",
  "description": "Create, read and write wav files according to the specs, updated version of https://github.com/rochars/wavefile",
  "repository": {
    "type": "git",
    "url": "git://github.com/rochars/wavefile.git"
  },
  "bugs": {
    "url": "https://github.com/rochars/wavefile/issues"
  },
  "keywords": [
    "wav",
    "RIFF",
    "RIFX",
    "RF64",
    "WAVE",
    "BWF",
    "audio",
    "8-bit",
    "11-bit",
    "12-bit",
    "16-bit",
    "20-bit",
    "24-bit",
    "32-bit",
    "64-bit",
    "PCM",
    "ADPCM",
    "encode",
    "decode",
    "A-Law",
    "mu-Law",
    "_PMX",
    "iXML",
    "cue",
    "resampler"
  ],
  "author": "Rafael da Silva Rocha <rocha.rafaelsilva@gmail.com>",
  "license": "MIT",
  "private": true,
  "directories": {
    "dist": "dist",
    "externs": "externs",
    "lib": "lib",
    "scripts": "scripts"
  },
  "files": [
    "bin",
    "dist",
    "externs",
    "lib",
    "scripts",
    "index.js",
    "index.d.ts",
    "LICENSE",
    "README.md",
    "AUTHORS.md",
    "CHANGELOG.md"
  ],
  "type": "module",
  "main": "./index.js",
  "module": "./index.js",
  "types": "./index.d.ts",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "build": "pnpm clean && tsc --declaration",
    "dev": "pnpm clean && tsc --declaration --watch",
    "dev:watch": "tsc -p . --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run",
    "clean": "rimraf ./dist ./build ./.cache ./.temp ./logs ./test/coverage"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/node": "^18.11.9",
    "@vitest/coverage-c8": "^0.24.5",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "vitest": "^0.24.5"
  }
}
